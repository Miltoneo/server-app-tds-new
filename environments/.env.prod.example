# =============================================================================
# Exemplo de Configuração de Produção - Construtora
# =============================================================================
# Copie este arquivo para .env.prod e ajuste os valores OBRIGATORIAMENTE
# NUNCA use valores padrão em produção!
# =============================================================================

# ⚠️ IMPORTANTE: Configure DJANGO_ENV no sistema operacional (não aqui)
# Systemd: Environment="DJANGO_ENV=production"
# Shell: export DJANGO_ENV=production

# Django Core
DEBUG=False
SECRET_KEY=CHANGE_ME_GENERATE_STRONG_SECRET_KEY_50_CHARS_MIN
ALLOWED_HOSTS=www.yourdomain.com,yourdomain.com

# Banco de Dados PostgreSQL (Produção)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=db_construtora
DATABASE_HOST=localhost
DATABASE_USER=CHANGE_ME_DB_USER
DATABASE_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD
DATABASE_PORT=5432

# URLs (Produção)
SITE_URL=https://www.yourdomain.com
BASE_URL=https://www.yourdomain.com

# Email (SMTP - Postfix local ou servidor externo)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Redis (obrigatório em produção)
USE_REDIS=True
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# reCAPTCHA (Chaves de PRODUÇÃO - obter em https://www.google.com/recaptcha)
RECAPTCHA_PUBLIC_KEY=CHANGE_ME_PRODUCTION_PUBLIC_KEY
RECAPTCHA_PRIVATE_KEY=CHANGE_ME_PRODUCTION_PRIVATE_KEY

# Mercado Pago (Chaves de PRODUÇÃO)
MERCADO_PAGO_PUBLIC_KEY=APP_USR-CHANGE-ME-PRODUCTION
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-CHANGE-ME-PRODUCTION
MERCADO_PAGO_WEBHOOK_SECRET=CHANGE-ME-WEBHOOK-SECRET

# URLs de retorno (pagamentos - PRODUÇÃO)
MP_SUCCESS_URL=https://www.yourdomain.com/construtora/checkout/sucesso/
MP_FAILURE_URL=https://www.yourdomain.com/construtora/checkout/falha/
MP_PENDING_URL=https://www.yourdomain.com/construtora/checkout/pendente/

# Segurança (produção - obrigatório)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
